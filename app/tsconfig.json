{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2017",
            "WebWorker"
        ],
        "baseUrl": "src",
        "target": "es6",
        "module": "esnext",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "types": [
            "svelte",
            "@sapper",
            "global"
        ],
        "typeRoots": [
            "types"
        ]
    },
    "include": [
        "src/**/*",
        "src/node_modules/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "static/*"
    ]
}
